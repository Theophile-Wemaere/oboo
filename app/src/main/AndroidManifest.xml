<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required in order to make API calls -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- NOTE: Add the line below to the <application> element to allow API queries over plain HTTP -->
    <!-- android:usesCleartextTraffic="true" -->
    <application
        android:name=".ObooApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Oboo"
        tools:targetApi="31">
        <activity
            android:name=".DashboardActivity"
            android:exported="true"
            android:theme="@style/Theme.Oboo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RoomsActivity"
            android:exported="true"
            android:theme="@style/Theme.Oboo">
        </activity>
        <activity
            android:name=".RoomDetailActivity"
            android:exported="true"
            android:theme="@style/Theme.Oboo">
        </activity>
        <activity
            android:name=".FloorsActivity"
            android:exported="true"
            android:theme="@style/Theme.Oboo">
        </activity>
    </application>

</manifest>